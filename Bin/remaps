#!/bin/sh

# this script is run at login by i3 config

# keyboard delay and repeat rate
xset r rate 300 50

# turn off keyboard input error beep sound
xset -b

# set caps lock as escape when tapped and super when held
# uses the xcape package
setxkbmap -layout us -variant altgr-intl -option caps:super
killaall xcape ; xcape -e 'Super_L=Escape'
xmodmap -e 'keycode 135 = Super_R'
